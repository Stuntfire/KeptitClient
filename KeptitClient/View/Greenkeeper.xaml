<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KeptitClient.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity" xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:ViewModels="using:KeptitClient.ViewModels"
    x:Class="KeptitClient.View.Greenkeeper"
    mc:Ignorable="d">
    <Page.DataContext>
        <ViewModels:MainViewModel/>
    </Page.DataContext>
    <SplitView x:Name="MySplitView" DisplayMode="CompactOverlay"  IsPaneOpen="True" 
               CompactPaneLength="160" OpenPaneLength="160" PaneBackground="{x:Null}">

        <SplitView.Pane>

            <StackPanel Background="#00412e" Margin="0,51,0,0">

                <StackPanel Orientation="Horizontal" Background="#d6af55">
                    <Button x:Name="MenuButton1" Content="G" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="30"
                            Width="50" Height="50" Background="Transparent" Margin="0" Foreground="White">

                        <Interactivity:Interaction.Behaviors>
                            <Core:EventTriggerBehavior EventName="Click">

                            </Core:EventTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>

                    </Button>


                    <TextBlock Text="Greenkeeper" FontSize="18" VerticalAlignment="Center" Foreground="White" />

                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="MenuButton2" Content="A" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            Width="50" Height="50" Background="Transparent" FontSize="30" Foreground="White">
                        <!--<Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Green"/>
                                
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Red"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>-->

                    </Button>

                    <TextBlock Text="Admin" FontSize="18" VerticalAlignment="Center" Foreground="White" />

                </StackPanel>
                <Image x:Name="image" Height="119" Source="Icons\Logo.png" Margin="0,350,3,3"/>
            </StackPanel>
        </SplitView.Pane>

        <Grid Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="19*"/>
                <ColumnDefinition Width="186*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>

                <RowDefinition Height="47*"/>
                <RowDefinition Height="673*"/>
            </Grid.RowDefinitions>



            <Image HorizontalAlignment="Right" Source="\images\ledreborg_logo.png" Height="120" VerticalAlignment="Top" Width="0" Margin="0,0,7,0" Grid.RowSpan="2" Grid.Column="1"/>
            <SplitView Height="53" Background="#00412e" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="-160,-2,0,0" Grid.RowSpan="2" PaneBackground="#FF00412E">

                <SplitView.Pane>
                    <Grid/>


                </SplitView.Pane>
                <TextBlock x:Name="textBlock" Padding="5"  HorizontalAlignment="Left" Height="53"  FontSize="30" TextWrapping="Wrap" Text="Keptit Greenkeeper CMS" VerticalAlignment="Top" Foreground="White" Width="1071"/>

                <!--<TextBlock Padding="1,2,0,30" x:Name="textBlock" FontSize="30"  HorizontalAlignment="Left" Height="53" TextWrapping="Wrap" Text="Keptit Greenkeeper CMS" VerticalAlignment="Top" Width="1279" FocusVisualPrimaryBrush="White" Foreground="White"/>-->


            </SplitView>
            <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="42,106,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Navn:" FontSize="18" VerticalAlignment="Top" Width="171" Grid.ColumnSpan="2"/>

            <!--<TextBlock x:Name="textBlock2" Grid.Column="1" HorizontalAlignment="Left" Margin="48,19,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Greenkeeper indtast udført opgave:" VerticalAlignment="Top" Height="63" Width="1032" FocusVisualPrimaryBrush="White" FontSize="50"/>-->

            <!--<StackPanel Margin="48,134,846,385" Grid.Row="1" Grid.Column="1">
                <ComboBox x:Name="comboBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ItemsSource="{Binding AreaCollection, Mode=TwoWay}" Width="423" Height="45" Margin="0,0,-301,0" IsDropDownOpen="True"/>
            </StackPanel>-->


            <TextBlock x:Name="textBlock3" Grid.Column="1" HorizontalAlignment="Left" Margin="325,107,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Opgave udført den:" FontSize="18" VerticalAlignment="Top" Width="160"/>
            <TextBlock x:Name="textBlock4" FontSize="18" HorizontalAlignment="Left" Margin="41,202,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Område:" VerticalAlignment="Top" Height="30" Width="311" Grid.ColumnSpan="2"/>
            <ComboBox x:Name="comboBox1" HorizontalAlignment="Left" Margin="40,230,4,0" Grid.Row="1" VerticalAlignment="Top" Width="350" Height="34" Grid.ColumnSpan="2" ItemsSource="{Binding AreaCollection, Mode=TwoWay}" SelectedItem="{Binding SelectedArea, Mode=TwoWay}"/>
            <TextBlock x:Name="textBlock5" HorizontalAlignment="Left" Margin="41,303,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Under område:" VerticalAlignment="Top" FontSize="18" Height="27" Width="171" Grid.ColumnSpan="2"/>
            <ComboBox x:Name="comboBox2" HorizontalAlignment="Left" Margin="40,330,4,0" Grid.Row="1" VerticalAlignment="Top" Width="350" Height="32" Grid.ColumnSpan="2" ItemsSource="{Binding SubAreaCollection, Mode=TwoWay}" SelectedItem="{Binding SelectedSubArea, Mode=TwoWay}"/>
            <TextBlock x:Name="textBlock6" HorizontalAlignment="Left" Margin="41,411,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Opgave:" VerticalAlignment="Top" Height="26" Width="277" FontSize="18" Grid.ColumnSpan="2"/>
            <ComboBox x:Name="comboBox3" HorizontalAlignment="Left" Margin="40,437,4,0" Grid.Row="1" VerticalAlignment="Top" Width="350" Height="32" Grid.ColumnSpan="2" ItemsSource="{Binding GreenTaskCollection, Mode=TwoWay}" SelectedItem="{Binding SelectedGreenTask, Mode=TwoWay}"/>
            <TextBlock x:Name="textBlock7" HorizontalAlignment="Left" Margin="41,529,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Indtast antal timer og minutter brugt:"  FontSize="18" VerticalAlignment="Top" Height="29" Width="351" Grid.ColumnSpan="2"/>
            <TextBox x:Name="timer" HorizontalAlignment="Left" Margin="41,563,0,0" Grid.Row="1" TextWrapping="Wrap" Text="{Binding TaskHour, Mode=TwoWay}" VerticalAlignment="Top" Height="47" Width="95" Grid.ColumnSpan="2" PlaceholderText="Timer"/>
            <TextBox x:Name="minutter" Grid.Column="1" HorizontalAlignment="Left" Margin="72,563,0,0" Grid.Row="1" TextWrapping="Wrap" Text="{Binding TaskMinutes, Mode=TwoWay}" VerticalAlignment="Top" Height="47" Width="99" PlaceholderText="Minutter"/>
            <TextBlock x:Name="textBlock8" Grid.Column="1" HorizontalAlignment="Left" Margin="325,195,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Tilføj evt. en note til opgaven:" VerticalAlignment="Top"  FontSize="18" Height="37" Width="334"/>
            <TextBox x:Name="textBox2" Grid.Column="1" HorizontalAlignment="Left" Margin="325,229,0,0" Grid.Row="1" TextWrapping="Wrap"  VerticalAlignment="Top" Height="252" Width="334" Text="{Binding TaskNotes, Mode=TwoWay}" BorderBrush="#66000000"/>
            <Button x:Name="button" Content="Gem udførte opgave" Grid.Column="1" HorizontalAlignment="Left" Margin="401,563,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="18" Height="47" Width="258" Background="#cccccc" Command="{Binding AddTaskCommand}"/>
            <TextBlock x:Name="textBlockOverskrift" HorizontalAlignment="Left" Margin="41,17,-64,0" Grid.Row="1" TextWrapping="Wrap" Text="Greenkeeper indtast udført opgave:" VerticalAlignment="Top" FontSize="36" Height="81" Width="1143" FontFamily="Segoe UI Light" Grid.ColumnSpan="2"/>
            <ComboBox x:Name="comboBoxNavn" HorizontalAlignment="Left" Margin="40,136,4,0" Grid.Row="1" VerticalAlignment="Top" Width="350" Height="32" Grid.ColumnSpan="2" ItemsSource="{Binding GreenKeeperCollection, Mode=TwoWay}" SelectedItem="{Binding SelectedGreenKeeper, Mode=TwoWay}"/>
            <ListView x:Name="listView" Background="#f1f1f1" Grid.Column="1" HorizontalAlignment="Left" Height="474" Margin="715,136,0,0" Grid.Row="1" VerticalAlignment="Top" Width="275" ItemsSource="{Binding GreenkeeperInfoCollection, Mode=TwoWay}"/>
            <TextBlock x:Name="textBlock9" Grid.Column="1" HorizontalAlignment="Left" Margin="715,106,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Dato og tid brugt på udførte opgaver" VerticalAlignment="Top" Height="33" Width="256" FontSize="18"/>
            <DatePicker Grid.Column="1" HorizontalAlignment="Left" Margin="325,136,0,0" Grid.Row="1" VerticalAlignment="Top" Width="334" DataContext="{Binding SelectedDate, Mode=TwoWay}"/>

        </Grid>
    </SplitView>
</Page>
